.zi-more
  width calc(100% - 40px)
  position relative
  display flex
  justify-content center
  align-items center
  margin rem(20)

  &:before
    position absolute
    left 0
    right 0
    height 1px
    width 100%
    background-color var(--accents-2)
    content ''

  .zi-more-slot
    background-color var(--accents-1)
