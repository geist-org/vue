{
  "name": "@zeit-ui/vue",
  "version": "1.3.1",
  "description": "A popular UI framework for Vue",
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "NODE_ENV=production vue-cli-service build",
    "build:lib": "node scripts/build.js",
    "clear": "rm -rf dist lib",
    "lint": "xo",
    "now-build": "node scripts/now-build.js && yarn run build && cp ./public/favicon.ico ./dist",
    "release": "yarn run clear && yarn run build:lib && yarn publish --access public"
  },
  "pre-commit": [
    "lint"
  ],
  "xo": {
    "extends": [
      "lambdas/vue"
    ],
    "rules": {
      "vue/no-side-effects-in-computed-properties": true,
      "prefer-object-spread": 0
    },
    "extensions": [
      "vue",
      "js"
    ],
    "ignore": [
      "scripts",
      "lib",
      "dist",
      "public",
      "examples"
    ]
  },
  "dependencies": {
    "@zeit-ui/themes": "^0.1.0",
    "@zeit-ui/typographic": "^0.2.3"
  },
  "devDependencies": {
    "prismjs": "^1.15.0",
    "vue": "^2.6.6",
    "vue-auto": "^0.2.5",
    "vue-prism-component": "^1.1.1",
    "vue-router": "^3.0.1",
    "@zeit-ui/vue-icons": "^2.0.0",
    "@types/fs-extra": "^7.0.0",
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "babel-eslint": "^10.0.1",
    "eslint-config-lambdas": "^0.0.11",
    "execa": "^1.0.0",
    "fs-extra": "^8.0.1",
    "pre-commit": "^1.2.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "terser": "^3.14.1",
    "vue-cli-plugin-pug": "^1.0.7",
    "vue-clipboard2": "^0.3.0",
    "vue-markdown-loader": "^2.4.1",
    "vue-template-compiler": "^2.6.6",
    "xo": "^0.24.0"
  },
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 8"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "engines": {
    "node": ">= 8.1.0",
    "npm": ">= 5.0.0"
  },
  "files": [
    "LICENSE",
    "dist/",
    "lib"
  ],
  "keywords": [
    "vue component",
    "zeit",
    "vue ui"
  ],
  "license": "MIT",
  "main": "dist/zeit-ui.common.js",
  "module": "dist/zeit-ui.common.js",
  "peerDependencies": {
    "vue": "^2.5.16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeit-ui/vue.git"
  },
  "style": "dist/zeit-ui.css",
  "unpkg": "dist/zeit-ui.umd.js"
}
