{
  "name": "@zeit-ui/vue",
  "version": "1.0.0-beta.3",
  "description": "A popular UI framework for Vue",
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:lib": "vue-cli-service build --target lib --name zeit-ui ./packages/index.js",
    "clear": "rm -rf dist",
    "lint": "xo",
    "now-build": "NODE_ENV=production yarn run build && cp ./public/favicon.ico ./dist",
    "release": "yarn run clear && yarn run build:lib && yarn publish --access public"
  },
  "pre-commit": [
    "lint"
  ],
  "xo": {
    "extends": [
      "lambdas/vue"
    ],
    "rules": {
      "vue/no-side-effects-in-computed-properties": true,
      "prefer-object-spread": 0
    },
    "extensions": [
      "vue",
      "js"
    ],
    "ignore": [
      "scripts"
    ]
  },
  "dependencies": {
    "@zeit-ui/style": "^0.8.3",
    "prismjs": "^1.15.0",
    "vue": "^2.6.6",
    "vue-prism-component": "^1.1.1",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "babel-eslint": "^10.0.1",
    "eslint-config-lambdas": "^0.0.11",
    "pre-commit": "^1.2.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "terser": "^3.14.1",
    "vue-cli-plugin-pug": "^1.0.7",
    "vue-markdown-loader": "^2.4.1",
    "vue-template-compiler": "^2.6.6",
    "xo": "^0.24.0"
  },
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 8"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "engines": {
    "node": ">= 8.1.0",
    "npm": ">= 5.0.0"
  },
  "files": [
    "LICENSE",
    "dist/",
    "packages/"
  ],
  "keywords": [
    "vue component",
    "zeit",
    "vue ui"
  ],
  "license": "MIT",
  "main": "dist/zeit-ui.common.js",
  "module": "dist/zeit-ui.common.js",
  "peerDependencies": {
    "vue": "^2.5.16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeit-ui/vue.git"
  },
  "style": "dist/zeit-ui.css",
  "unpkg": "dist/zeit-ui.umd.js"
}