.zi-link-wrapper
  display inline-flex
  align-items center

.zi-link
  line-height 30px
  color inherit

  svg
    margin-left 7px
    color inherit
    min-height 15px

  &:hover
    .more
      padding-left 8px

  &.no-decoration
    text-decoration none

  &.bold
    font-weight 700

  &.default-color
    color #0076ff

.zi-link-more
  margin-left 7px
  transition padding-left .2s ease
  font-weight inherit
  min-height 15px
  color #0076ff
  cursor pointer

.zi-link-default
  display flex
  align-items center
  margin-left 7px
  width .9em
  height .9em
