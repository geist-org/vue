.popover
  display inline-block
  position relative

.dropdown
  position absolute
  top 100%
  z-index 9999
  display inline-flex
  justify-content center
  justify-items center
  flex-direction column
  color var(--geist-foreground)
  box-shadow var(--shadow-medium)
  background-color var(--geist-background)
  width 200px
  border-radius var(--geist-radius)
  padding 8px 0
  text-align left
  margin-top 12px
  transition opacity 0.2s ease 0s, margin-top 0.2s ease 0s
  contain layout

  &.active
    transform translateY(14px)
    pointer-events unset
    height unset
    opacity 1

  &.center
    left 50%
    transform translate(-50%)

  &.left
    left 0
    transform translate(-5px)
    .icon
      left 10px
      transform unset

  &.right
    right 0
    transform translate(5px)
    .icon
      right 10px
      left unset
      transform unset

.slot-container
  width 100%
  height 100%
  overflow hidden

.icon
  position absolute
  user-select none
  content ''
  top -12px
  left 50%
  transform translate(-50%)

.host
  cursor pointer

.popover-item
  position relative
  display inline-flex
  justify-content space-between
  align-items center
  flex 1
  font-size 14px
  line-height 17px
  padding 8px 20px
  width 100%
  color rgb(153, 153, 153)
  user-select none
  cursor pointer
  transition color 0.2s ease 0s

  &:not(.nohover):not(.disabled):hover
    background-color var(--accents-1)
    color var(--geist-foreground)

  &.nohover
    cursor default
    pointer-events none

  &.line
    margin 8px 0
    height 1px
    flex-basis 1px
    background-color var(--accents-2)
    padding 0

  &.disabled
    opacity .5
    cursor not-allowed

  &.primary
    text-decoration none
    color var(--geist-foreground)

  >.title
    color var(--geist-foreground)
    font-size 14px
    text-transform uppercase

  >.subtitle
    color rgb(153, 153, 153)
    font-size 12px
    text-transform uppercase
