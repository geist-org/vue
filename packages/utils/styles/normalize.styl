html
  font-size 14px

body
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Avenir', 'PingFang SC', 'Helvetica Neue', Helvetica
  color #000
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  font-size 1rem
  line-height 1.7
  margin 0
  padding 0
  min-height 100%

*, *::before, *::after
  box-sizing inherit
  text-rendering geometricPrecision
  -webkit-tap-highlight-color transparent

h1, h2, h3, h4, h5, h6
  line-height 1.5
  color inherit

h1
  font-size rem(32)
  font-weight 400

h2
  font-size rem(24)
  font-weight 400

h3
  font-size rem(18)
  font-weight bold

h4, h5, h6
  font-size rem(16)
  font-weight bold

p
  font-size rem(14)
  font-weight 400
  margin rem(16) 0
  line-height 1.5
  color inherit

b, .zi-bold
  font-weight 600

span
  font-size inherit
  color inherit
  font-weight 400

img
  max-width 100%

a
  color #067df7
  outline none
  cursor pointer
  text-decoration none
  font-size inherit
  -webkit-touch-callout none

  &:hover
    text-decoration underline

blockquote
  margin .9rem 0
  padding 0
  color #666
  position: relative
  width: max-content
  padding-left 8px

  &::before
    position absolute
    top 50%
    left 0
    transform translateY(-50%)
    display inline-block
    content ''
    margin-right 5px
    height 10px
    width 5px
    background-color rgb(153, 153, 153)

ul, ol
  padding 0
  list-style none
  margin-left rem(14)

ol
  list-style-type decimal

li
  font-size rem(14)
  line-height rem(24)

  &+&
    margin-top rem(10)

ul>li
  &::before
    content '-'
    display inline-block
    color #999
    position absolute
    margin-left rem(-15)

::selection
  background-color #79ffe1
  color #000

svg:not(:root)
  overflow hidden

button, input, select, textarea
  font-family inherit
  font-size inherit
  line-height inherit
  color inherit
  margin 0

  &:focus
    outline none

input[type="button"],
input[type="submit"],
input[type="reset"]
  appearance button

input:-webkit-autofill
  box-shadow 0 0 0 100px #fff inset

