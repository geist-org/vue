.zi-progress-bar
  width 100%
  display inline-flex
  justify-content space-between
  align-items center
  height rem(10)
  user-select none

  &.top, &.bottom
    position fixed
    height rem(3)
    width 100vw
    left 0
    z-index 9999
    overflow hidden

    .zi-progress
      width 100%

  &.top
    top 0

  &.bottom
    bottom 0

.zi-progress
  width 100%
  height 100%
  background-color var(--accents-2)
  border-radius rem(4)

.zi-progress__inner
  width 0
  height 100%
  border-radius var(--geist-radius)
  transition: width 0.6s ease, background-color 1s ease

  &.default
    background-color var(--geist-foreground)

  &.success
    background-color var(--geist-success)

  &.warning
    background-color var(--geist-warning)

  &.danger
    background-color var(--geist-error)

  &.secondary
    background-color var(--geist-secondary)
