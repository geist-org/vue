.zi-link-wrapper
  display inline-flex
  align-items center

.zi-link
  display inline-flex
  line-height inherit
  color inherit

  svg
    display inline-flex
    margin 0 5px
    color inherit
    width 1em
    height 1em

  &:hover
    .more
      padding-left 8px

  &.no-decoration
    text-decoration none

  &.bold
    font-weight 700

  &.color
    color var(--geist-success)

.zi-link-more
  margin-left 7px
  transition padding-left .2s ease
  font-weight inherit
  min-height 15px
  color inherit
  cursor pointer

  &.color
    color var(--geist-success)
