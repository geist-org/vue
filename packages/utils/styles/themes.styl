.zi-dark-theme
  background-color #111
  color white

  html, body
    background-color #111
    color #fff

  .zi-main, .zi-layout
    background-color #111

    &:before
      position fixed
      top -100px
      left -100px
      right -100px
      bottom -100px
      background-color #111
      content ''
      z-index -1

  a
    color #dadada
    font-weight 700
    transition all .16s ease
    &:hover
      color white

  p, ul, li, pre, pre code
    color rgb(235, 235, 235)

  blockquote
    color #bdbdbd

  pre
    border-color #333
    background-color black
    color #5ce6cd

  .zi-note
    background-color black
    color #eaeaea

  .zi-note-type
    color #eaeaea

  table
    th
      background-color #111
      color #888
      border-color #333
      text-transform uppercase

    th:nth-child(1), th:last-child
      border-color #333

    tr td
      color #999
      border-bottom-color #333

