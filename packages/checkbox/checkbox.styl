.zi-checkbox
  cursor pointer
  display inline-flex
  height rem(12)
  width rem(12)
  background-image url("data:image/svg+xml,%3Csvg width='12' height='12' viewBox='0 0 12 12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M8.5 0.5H3.5C1.84315 0.5 0.5 1.84315 0.5 3.5V8.5C0.5 10.1569 1.84315 11.5 3.5 11.5H8.5C10.1569 11.5 11.5 10.1569 11.5 8.5V3.5C11.5 1.84315 10.1569 0.5 8.5 0.5Z' stroke='%23999'/%3E%3C/svg%3E%0A")
  background-size contain
  background-repeat no-repeat
  background-position center
  user-select none

  &.disabled
    cursor not-allowed
    opacity .4

.zi-checkbox-group
  .zi-checkbox-container
    margin-right rem(30)

.zi-checkbox-container
  height rem(14)
  line-height rem(14)
  display inline-flex
  justify-content center
  align-items center
  width auto

  &.disabled
    cursor not-allowed
    .zi-checkbox-label
      cursor not-allowed

  .zi-checkbox-label
    font-size rem(14)
    line-height rem(14)
    padding-left rem(8)
    user-select none
    cursor pointer

  .zi-checkbox-original
    opacity 0
    outline none
    position absolute
    width 0
    height 0
    margin 0
    padding 0
    z-index -1
    background-color transparent
