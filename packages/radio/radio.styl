.zi-radio-input
  cursor pointer
  box-sizing border-box
  height 14px
  width 14px
  border 1px solid var(--accents-2)
  border-radius 50%
  position absolute
  left 0
  &:before
    content ''
    position absolute
    height 14px
    width 14px
    top -1px
    left -1px
    border-radius 50%
    background-color var(--geist-foreground)
    transform scale(0)
    transition transform .2s ease 0s

  &.disabled
    border-color var(--accents-2)
    cursor not-allowed

  &.checked
    &:before
      transform scale(1)

    &.disabled
      &:before
        background-color var(--accents-2)

.zi-radio
  line-height rem(14)
  display flex
  align-items flex-start
  flex-direction column
  -webkit-box-pack start
  overflow hidden
  padding rem(4) 0 rem(4) rem(30)

  &.disabled
    cursor not-allowed
    .zi-radio-label
      cursor not-allowed
      color var(--accents-5)

  .zi-radio-label
    font-size rem(16)
    font-weight 600
    user-select none
    cursor pointer

  .zi-radio-description
    color var(--accents-3)
    font-size 14px
    padding 8px 0 4px 0
    width 100%
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  .zi-radio-original
    opacity 0
    outline none
    position absolute
    width 0
    height 0
    margin 0
    padding 0
    z-index -1
    background-color transparent

.zi-radio-container
  position relative
  display inline-flex
  margin-right rem(30)
