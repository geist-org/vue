.zi-tag
  display inline-block
  line-height rem(14)
  height rem(28)
  font-size rem(14)
  border-radius 5px
  border 1px solid var(--accents-2)
  background-color var(--accents-1)
  padding rem(6)

  &.success
    color var(--geist-success)

  &.warning
    color var(--geist-warning)

  &.error, &.danger
    color var(--geist-error)
